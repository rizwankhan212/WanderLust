<% layout("/layouts/boilerplate") %>
    <!-- <h1>All List are here</h1> -->
    <div id="filters">
        <div class="filter Trending">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter Rooms">
            <div><i class="fa-solid fa-bed"></i></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter IconicCities">
            <div><i class="fa-solid fa-city"></i></i></div>
            <p>Iconic cities</p>
        </div>
        <div class="filter MountainCities">
            <div><i class="fa-solid fa-mountain"></i></i></div>
            <p>Mountain cities</p>
        </div>
        <div class="filter Castles">
            <div><i class="fa-brands fa-fort-awesome"></i></i></i></div>
            <p>castle</p>
        </div>
        <div class="filter Farmhouse">
            <div><i class="fa-solid fa-tree"></i></i></div>
            <p>Farmhouse</p>
        </div>
        <div class="filter Arctic">
            <div><i class="fa-solid fa-igloo"></i></i></div>
            <p>Aractic</p>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
    <div class='row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3'>
        <% for(let list of listings){ %>
            <div class="card list-card col ">
                <a href="/listings/<%= list.id %>" class="list-link">
                    <img src="<%= list.image.url %>" alt="" class="card-img-top">
                    <div class="card-text">
                        <b>
                            <%= list.title %>
                        </b>
                        <p>â‚¹<%= (typeof list.price==="number" ) ? list.price.toLocaleString("en-IN") : "N/A" %> /night
                        </p>
                        <p style="display: none;" class="category">
                            <%= list.category %>
                        </p>
                    </div>
                </a>
            </div>
            <% } %>
    </div>
    <div id="noResults" style="display:none; text-align:center; margin-top:20px;">
        <h3>Not Now Not Available</h3>
    </div>
    <script src="/js/tax.js"></script>
    <script src="/js/filter.js"></script>